{
    "name": "pstd",
    "version": "0.2.0",
    "description": "Cliipboard Manager",
    "license": "MIT",
    "private": false,
    "repository": {
        "type": "git",
        "url": "https://github.com/mexin/pstd.git"
    },
    "homepage": "",
    "bugs": {
        "url": "https://github.com/mexin/pstd.git/issues"
    },
    "author": {
        "name": "Luis Mexin",
        "email": "mexinluis@gmail.com",
        "url": "https://github.com/mexin"
    },
    "engines": {
        "node": ">=9.0.0",
        "npm": ">=5.0.0",
        "yarn": ">=1.0.0"
    },
    "main": "main.js",
    "scripts": {
        "prod": "webpack --mode production --config webpack.build.config.js && electron --noDevServer .",
        "start": "NODE_ENV=dev webpack serve --hot --host 0.0.0.0 --config=./webpack.dev.config.js --mode development",
        "build": "NODE_ENV=prod webpack --config webpack.build.config.js --mode production",
        "package": "npm run build",
        "postpackage": "electron-packager ./ --out=./builds",
        "private:build:linux": "npm run build && electron-builder --linux"
    },
    "dependencies": {
        "@fortawesome/fontawesome-svg-core": "^1.2.34",
        "@fortawesome/free-solid-svg-icons": "^5.15.2",
        "@fortawesome/react-fontawesome": "^0.1.14",
        "bulma": "^0.9.2",
        "electron-clipboard-watcher2": "^1.0.4",
        "moment": "^2.29.1",
        "nedb-promises": "^4.1.1",
        "react": "^17.0.1",
        "react-dom": "^17.0.1"
    },
    "devDependencies": {
        "@babel/core": "^7.13.8",
        "@babel/plugin-proposal-class-properties": "^7.13.0",
        "@babel/preset-env": "^7.13.8",
        "@babel/preset-react": "^7.12.13",
        "babel-loader": "^8.2.2",
        "babel-polyfill": "^6.26.0",
        "css-loader": "^5.1.0",
        "electron": "^11.3.0",
        "electron-builder": "^22.9.1",
        "electron-packager": "^15.2.0",
        "file-loader": "^6.2.0",
        "html-webpack-plugin": "^5.2.0",
        "mini-css-extract-plugin": "^1.3.9",
        "node-sass": "^5.0.0",
        "postcss-cssnext": "^3.1.0",
        "postcss-import": "^14.0.0",
        "postcss-loader": "^5.0.0",
        "postcss-nested": "^5.0.4",
        "postcss-pxtorem": "^5.1.1",
        "sass-loader": "^11.0.1",
        "style-loader": "^2.0.0",
        "webpack": "^5.24.2",
        "webpack-cli": "^4.5.0",
        "webpack-dev-server": "^3.11.2"
    },
    "build": {
        "appId": "com.electron.pstd",
        "copyright": "Copyright Â© 2021 Luis Mexin",
        "productName": "pstd",
        "electronVersion": "11.2.0",
        "asar": true,
        "directories": {
            "app": "/home/luismexin/Development/Electron/pstd-v1",
            "output": "build"
        },
        "extraFiles": [
            {
                "from": "src/icons",
                "to": "resources",
                "filter": [
                    "**/*"
                ]
            }
        ],
        "linux": {
            "target": [
                {
                    "target": "AppImage",
                    "arch": [
                        "x64"
                    ]
                },
                {
                    "target": "deb",
                    "arch": [
                        "x64"
                    ]
                }
            ]
        }
    }
}
